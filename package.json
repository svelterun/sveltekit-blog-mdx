{
  "name": "sveltekit-blog-mdx",
  "version": "1.1.0",
  "scripts": {
    "dev": "svelte-kit dev --port 3000",
    "build": "npm run generate:manifest && svelte-kit build",
    "preview": "svelte-kit preview --port 3000",
    "check": "svelte-check --fail-on-warnings",
    "check:watch": "svelte-check --watch",
    "lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "lint:scss": "stylelint \"src/**/*.{css,scss,svelte}\"",
    "format": "prettier --write --plugin-search-dir=. .",
    "generate:images": "node ./generate-responsive-image-data.js",
    "generate:manifest": "node ./generate-manifest.js",
    "generate:sitemap": "node ./generate-sitemap.js",
    "prettier:check": "prettier --check --plugin-search-dir=. .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^15.0.0",
    "@fontsource/lato": "^4.5.0",
    "@fontsource/lora": "^4.5.1",
    "@fontsource/source-sans-pro": "^4.5.1",
    "@rodneylab/sveltekit-components": "^0.2.5",
    "@sveltejs/adapter-static": "^1.0.0-next.22",
    "@sveltejs/kit": "^1.0.0-next.202",
    "@types/object-hash": "^2.2.1",
    "dayjs": "^1.10.7",
    "dotenv": "^10.0.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "front-matter": "^4.0.2",
    "husky": "^7.0.4",
    "mdsvex": "^0.9.8",
    "object-hash": "^2.2.0",
    "postcss": "^8.4.5",
    "postcss-html": "^1.3.0",
    "prettier": "~2.4.1",
    "prettier-plugin-svelte": "^2.5.1",
    "reading-time": "1.4.0",
    "sass": "^1.45.0",
    "sharp": "^0.29.3",
    "stylelint": "^15.10.1",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-scss": "^4.0.1",
    "svelte": "^3.44.3",
    "svelte-check": "^2.2.10",
    "svelte-feather-icons": "^3.5.0",
    "svelte-preprocess": "^4.10.0",
    "svelte-preprocess-import-assets": "^0.1.3",
    "vanilla-lazyload": "^17.5.0",
    "vite-imagetools": "^4.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rodneylab/sveltekit-blog-mdx"
  },
  "bugs": {
    "url": "https://github.com/rodneylab/sveltekit-blog-mdx/issues"
  },
  "type": "module"
}
